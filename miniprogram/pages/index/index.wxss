.head {
  position: fixed;
  /* background-color: white; */
  z-index: 999;
  width: 100%;
  /* overflow-x: auto; */
  overflow: hidden;
  overflow-y: hidden;
}

.head_second {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  width: 100vw;
  box-sizing: border-box;
  /* padding: 20rpx; */
}

.head_second .inputBox {
  display: flex;
  align-items: center;
  height: 100%;
}

.inputBox image {
  position: absolute;
  width: 35rpx;
  height: 35rpx;
}

.searchInput {
  padding-left: 80rpx;
  margin-left: -30rpx;
  /* box-sizing: border-box; */
  width: 340rpx;
  height: 70%;
  background-color: #fff;
  border-radius: 60rpx;
  border: 4rpx solid #F5E640;
}

.head_second .title {
  letter-spacing: 5rpx;
}

/* 热门闲鱼 */
.hotBanner {
  width: 100%;
  margin: 20rpx 0;
}
.hotBanner_title {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.hotBanner_content {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 20rpx 0;
}
.hotBanner_content_box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* background-color: green; */
}
.hotBanner_content_img {
  width: 80rpx;
  height: 80rpx;
}
.hotBanner_content_text {
  font-size: 28rpx;
}
/* 轮播图 */
.carousel {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  /* background-color: pink; */
}
.carousel image {
  width: 100%;
  
}
.carousel swiper-item {
  border-radius: 25rpx;
  overflow: hidden;
}
/* 标签 */
.label {
  width: 100%;
  height: 60rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;

}
.labelBox {
  padding: 15rpx;
  margin: 0 15rpx;
  line-height: 30rpx;
  background-color: rgb(247, 247, 247);
  border-radius: 35rpx;
}
.labelBox_choosen {
  background-color: rgb(248, 225, 70) !important;
}
/* 信息流 */
.infoBox {
  margin-bottom: 30rpx;
  background-color: #fff !important;
}