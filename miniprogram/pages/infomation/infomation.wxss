.container {
  width: 100%;
  background-color: rgb(235, 234, 234, 0.5);
}
.inform {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin: 20rpx 0;
  box-sizing: border-box;
  padding: 20rpx;
}
.card {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
}
.card_left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.inform image, .card image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: pink;
  margin-right: 20rpx;
}
.inform_text, .card_text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.title {
  font-size: 28rpx;
}
.content {
  font-size: 25rpx;
  color: #777777;
}
.photo {
  width: 130rpx !important;
  height: 130rpx !important;
  border-radius: 10rpx !important;
}