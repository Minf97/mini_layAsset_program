.container {
  width: 100%;
  background-color: rgb(235, 234, 234, 0.5);
}
.inform {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin: 20rpx 0;
  box-sizing: border-box;
  padding: 20rpx;
}
.card {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
}
.card_left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.inform image, .card image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  /* background-color: pink; */
  overflow: visible;
  box-shadow: 0 0 10rpx 5rpx rgb(241, 241, 241);
  margin-right: 20rpx;
}
.inform_text, .card_text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.title {
  font-size: 28rpx;
}
.content {
  font-size: 25rpx;
  color: #777777;
}
.photo {
  position: relative;
  width: 130rpx !important;
  height: 130rpx !important;
  border-radius: 10rpx !important;
}
.redbox {
  position: absolute;
  right: 0;
  top: 0;
  width: 25rpx;
  height: 25rpx;
  background-color: #e23c1a;
  border-radius: 50%;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 23rpx;
  color: #fff;
  box-shadow: 0 0 0 10rpx #fff;
}